<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:padding="10dp"
    android:background="?attr/colorOnBackground"
    tools:context=".app.presentation.ui.rate.RateFragment">

    <ImageView
        android:id="@+id/mecca_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mecca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/rate_us_title"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/rate_us_5_star"
        android:textColor="?attr/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mecca_img" />

    <TextView
        android:id="@+id/rate_us_msg"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/support"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rate_us_title" />

    <ImageView
        android:id="@+id/star1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_rate"
        app:layout_constraintEnd_toStartOf="@id/star2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rate_us_msg"
        app:tint="@color/color_secondary" />

    <ImageView
        android:id="@+id/star2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_rate"
        app:layout_constraintEnd_toStartOf="@id/star3"
        app:layout_constraintStart_toEndOf="@id/star1"
        app:layout_constraintTop_toTopOf="@id/star1"
        app:tint="@color/color_secondary" />

    <ImageView
        android:id="@+id/star3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_rate"
        app:layout_constraintEnd_toStartOf="@id/star4"
        app:layout_constraintStart_toEndOf="@id/star2"
        app:layout_constraintTop_toTopOf="@id/star1"
        app:tint="@color/color_secondary" />

    <ImageView
        android:id="@+id/star4"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_rate"
        app:layout_constraintEnd_toStartOf="@id/star5"
        app:layout_constraintStart_toEndOf="@id/star3"
        app:layout_constraintTop_toTopOf="@id/star1"
        app:tint="@color/color_secondary" />

    <ImageView
        android:id="@+id/star5"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_rate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/star4"
        app:layout_constraintTop_toTopOf="@id/star1"
        app:tint="@color/color_secondary" />

    <Button
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg2"
        android:text="@string/rate_now"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/star1" />

</androidx.constraintlayout.widget.ConstraintLayout>